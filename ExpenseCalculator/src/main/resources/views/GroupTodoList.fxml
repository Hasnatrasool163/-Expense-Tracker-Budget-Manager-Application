<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="320.0" prefWidth="450.0" stylesheets="@../style/styles.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.htech.expensecalculator.controllers.GroupTodoController">
    <children>
        <Label layoutX="13.0" layoutY="13.0" styleClass="heading" stylesheets="@../style/styles.css" text="Manage TODO List" />

        <Label layoutX="20.0" layoutY="80.0" text="Item Name:">
            <font>
                <Font size="15.0" />
            </font>
        </Label>
        <TextField fx:id="itemNameField" layoutX="150.0" layoutY="75.0" prefWidth="250.0" promptText="Enter Item Name" />

        <Label layoutX="20.0" layoutY="130.0" text="Category:">
            <font>
                <Font size="15.0" />
            </font>
        </Label>
        <ComboBox fx:id="categoryComboBox" layoutX="150.0" layoutY="125.0" prefWidth="250.0" promptText="Choose Category" />

        <Label layoutX="20.0" layoutY="180.0" text="Group:">
            <font>
                <Font size="15.0" />
            </font>
        </Label>
        <ComboBox fx:id="groupComboBox" layoutX="150.0" layoutY="175.0" prefWidth="250.0" promptText="Select Group" />

        <CheckBox fx:id="completedCheckBox" layoutX="150.0" layoutY="225.0" text="Completed">
            <font>
                <Font size="16.0" />
            </font>
        </CheckBox>

        <Button fx:id="saveButton" layoutX="141.0" layoutY="270.0" prefHeight="46.0" prefWidth="88.0" text="Add" textFill="WHITE">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
        <Button fx:id="cancelButton" layoutX="260.0" layoutY="270.0" prefHeight="46.0" prefWidth="102.0" text="Cancel" textFill="WHITE">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
      <Label layoutX="4.0" layoutY="50.0" minHeight="4.0" prefHeight="4.0" prefWidth="291.0" style="-fx-background-color: black;" />
    </children>
</AnchorPane>
