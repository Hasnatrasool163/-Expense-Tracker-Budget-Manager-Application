<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="376.0" prefWidth="452.0" stylesheets="@../style/styles.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.htech.expensecalculator.controllers.AddTransactionController">
    <children>
        <Label layoutX="14.0" layoutY="17.0" styleClass="heading" text="Add Transaction" />

        <Label layoutX="18.0" layoutY="80.0" text="Type (Income/Expense):">
         <font>
            <Font size="16.0" />
         </font></Label>
        <ComboBox fx:id="typeComboBox" layoutX="200.0" layoutY="75.0" prefWidth="200.0" promptText="Choose Type" />

        <Label layoutX="20.0" layoutY="133.0" text="Amount:">
         <font>
            <Font size="16.0" />
         </font></Label>
        <TextField fx:id="amountField" layoutX="200.0" layoutY="128.0" prefWidth="200.0" promptText="Enter Amount" />

        <Label layoutX="20.0" layoutY="186.0" text="Date:">
         <font>
            <Font size="16.0" />
         </font></Label>
        <DatePicker fx:id="datePicker" layoutX="200.0" layoutY="181.0" prefWidth="200.0" promptText="Choose Date" />

        <Label layoutX="20.0" layoutY="249.0" text="Category:">
         <font>
            <Font size="16.0" />
         </font></Label>
        <ComboBox fx:id="categoryComboBox" layoutX="200.0" layoutY="244.0" prefWidth="200.0" promptText="Select Category" />
      <Button fx:id="saveButton" layoutX="192.0" layoutY="320.0" prefHeight="46.0" prefWidth="103.0" text="Save" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button fx:id="cancelButton" layoutX="305.0" layoutY="320.0" prefHeight="46.0" prefWidth="103.0" text="Cancel" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Label layoutX="4.0" layoutY="53.0" maxHeight="9.0" minHeight="3.0" prefHeight="5.0" prefWidth="250.0" style="-fx-background-color: black;" />
    </children>
</AnchorPane>
